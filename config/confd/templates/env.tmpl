DOCKER_REGISTRY_CONFIG=/etc/docker-registry.yml
SEARCH_BACKEND=

SETTINGS_FLAVOR={{if exists "/resin/registry/s3/bucket"}}prod{{else}}dev{{end}}

{{if exists "/resin/registry/s3/bucket"}}REGIN_REGISTRY_S3_BUCKET={{getv "/resin/registry/s3/bucket"}}{{end}}
{{if exists "/resin/registry/s3/key"}}RESIN_REGISTRY_S3_KEY={{getv "/resin/registry/s3/key"}}{{end}}
{{if exists "/resin/registry/s3/secret"}}RESIN_REGISTRY_S3_SECRET={{getv "/resin/registry/s3/secret"}}{{end}}

{{if exists "/resin/registry/secret-key"}}RESIN_REGISTRY_SECRET_KEY={{getv "/resin/registry/secret-key"}}{{end}}
{{if exists "/resin/registry/storage-path"}}RESIN_REGISTRY_STORAGE_PATH={{getv "/resin/registry/storage-path"}}{{end}}
